<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>newStack</display-name>

    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>com.vedikunnel.tapestry</param-value>
    </context-param>

    <context-param>
        <param-name>tapestry.DevelopmentMode-modules</param-name>
        <param-value>com.vedikunnel.tapestry.services.DevelopmentModule</param-value>
    </context-param>

    <!-- Tapestry integration -->
    <filter>
        <filter-name>newStack</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>newStack</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- timeout de la session -->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>
